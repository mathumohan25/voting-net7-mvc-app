@model ElectoralSystem.Models.Entities.Voter

@{
    ViewData["Title"] = "Voter Details";
    var id = ViewContext.RouteData.Values["id"];
}

<h1>Index</h1>

<table class="table">
    <tbody>
        <tr>
            <td>
                Voter ID
            </td>
            <td>
                @Model.VoterId
            </td>
        </tr>
        <tr>
            <td>
                First Name
            </td>
            <td>
                @Model.FirstName
            </td>
        </tr>
        <tr>
            <td>
                Last Name
            </td>
            <td>
                @Model.LastName
            </td>
        </tr>
        <tr>
            <td>
                Email Address
            </td>
            <td>
                @Model.EmailAddress
            </td>
        </tr>
        <tr>
            <td>
                Address
            </td>
            <td>
                @Model.AddressLine
            </td>
        </tr>
        <tr>
            <td>
                City
            </td>
            <td>
                @Model.City
            </td>
        </tr>
        <tr>
            <td>
                State Name
            </td>
            <td>
                @Model.State.Name
            </td>
        </tr>
        <tr>
            <td>
                Zip Code
            </td>
            <td>
                @Model.ZipCode
            </td>
        </tr>
        <tr>
            <td>
                Country
            </td>
            <td>
                @Model.Country
            </td>
        </tr>
        <tr>
            <td>
                IsApproved
            </td>
            <td>
                @Model.IsEligible
            </td>
        </tr>

    </tbody>
</table>
<div>
    <a asp-action="Index" asp-route-id=@id>Back to Index</a>
</div>
