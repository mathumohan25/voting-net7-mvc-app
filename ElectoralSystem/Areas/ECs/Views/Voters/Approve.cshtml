@model ElectoralSystem.Models.Entities.Voter

@{
    ViewData["Title"] = "Voter Details";
}

<h1>Index</h1>

<table class="table">
    <tbody>
        <tr>
            <td>
                Voter ID
            </td>
            <td>
                @Model.VoterId
            </td>
        </tr>
        <tr>
            <td>
                First Name
            </td>
            <td>
                @Model.FirstName
            </td>
        </tr>
        <tr>
            <td>
                Last Name
            </td>
            <td>
                @Model.LastName
            </td>
        </tr>
        <tr>
            <td>
                Email Address
            </td>
            <td>
                @Model.EmailAddress
            </td>
        </tr>
        <tr>
            <td>
                Address
            </td>
            <td>
                @Model.AddressLine
            </td>
        </tr>
        <tr>
            <td>
                City
            </td>
            <td>
                @Model.City
            </td>
        </tr>
        <tr>
            <td>
                State Name
            </td>
            <td>
                @Model.State.Name
            </td>
        </tr>
        <tr>
            <td>
                Zip Code
            </td>
            <td>
                @Model.ZipCode
            </td>
        </tr>
        <tr>
            <td>
                Country
            </td>
            <td>
                @Model.Country
            </td>
        </tr>
    </tbody>
</table>
<form method="post">        
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Approve</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Voters" asp-action="List" class="btn btn-primary" style="width:200px">
                    Go back
                </a>
            </div>
        </div>
    </div>
</form>
