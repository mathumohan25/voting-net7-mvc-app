@using ElectoralSystem.Models.Entities
@model Candidate

<form method="post" asp-action="Delete2">
    <input hidden asp-for="Id" value="@Model.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete candidate Entry</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mt-3">
        <label asp-for="Name">Candidate Name</label>
        <input asp-for="Name" class="form-control" value=@Model.Name disabled />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label asp-for="Party">Candidate Party</label>
        <input asp-for="Party" class="form-control" value=@Model.Party.Name disabled />
        <span asp-validation-for="Party" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label asp-for="State">Candidate State</label>
        <input asp-for="State" class="form-control" value=@Model.State.Name disabled />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Candidates" asp-action="List" class="btn btn-primary" style="width:200px">
                    Go back
                </a>
            </div>
        </div>
    </div>
</form>